	"item": [
		{
			"name": "Get all books",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "ffa2d8f2-a84e-4992-bdf8-3d1110190cd6",
						"exec": [
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response time is less than 5000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);",
							"});",
							"",
							"var response = pm.response.json();",
							"",
							"pm.test('Response body should not be empty', () => {",
							"    pm.expect(pm.response.json()).to.not.be.empty;",
							"});",
							"",
							"pm.test('Response has the required fields', () => {",
							"    pm.expect(pm.response.json()).to.be.an('array');",
							"    pm.response.json().forEach(function (book) {",
							"        pm.expect(book).to.have.property('title');",
							"        pm.expect(book).to.have.property('author');",
							"        pm.expect(book).to.have.property('id');",
							"        pm.expect(book).to.have.property('genre');",
							"        pm.expect(book).to.have.property('yearPublished');",
							"        pm.expect(book).to.have.property('checkedOut');",
							"        pm.expect(book).to.have.property('createdAt');",
							"    });",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
